<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.add_record.AddRecordFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/appCompatTextView2"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/ic_add_24dp"
      app:layout_constraintBottom_toBottomOf="@+id/tvAddRecord"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tvAddRecord" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvAddRecord"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:gravity="end|center_vertical"
      android:maxLength="16"
      android:maxLines="1"
      android:textSize="50sp"
      app:autoSizeMaxTextSize="50sp"
      app:autoSizeMinTextSize="12sp"
      app:autoSizeStepGranularity="4sp"
      app:autoSizeTextType="uniform"
      app:layout_constraintBottom_toTopOf="@+id/guideline3"
      app:layout_constraintEnd_toStartOf="@+id/appCompatTextView"
      app:layout_constraintStart_toEndOf="@+id/appCompatTextView2"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="1234556" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/appCompatTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:text="KZT"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/tvAddRecord"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tvAddRecord" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.4" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSevenAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="7"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnEightAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnEightAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="8"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnNineAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnSevenAddRecord"
      app:layout_constraintTop_toTopOf="@id/btnSevenAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnNineAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="9"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnDivideAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnEightAddRecord"
      app:layout_constraintTop_toTopOf="@id/btnEightAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnFourAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="4"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnFiveAddRecord"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnSevenAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnFiveAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="5"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnSixAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnFourAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnFourAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSixAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="6"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnMultiplyAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnFiveAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnFiveAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnOneAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="1"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnTwoAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnFourAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnTwoAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="2"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnThreeAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnOneAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnOneAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnThreeAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="3"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnSubtractAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnTwoAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnTwoAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnDotAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="."
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnZeroAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnOneAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnZeroAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnDeleteAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnDotAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnDotAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnDeleteAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="&lt;-"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/btnEqualsAddRecord"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnZeroAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnZeroAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnDivideAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="/"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnNineAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnNineAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnMultiplyAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="*"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnSixAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnSixAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSubtractAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="-"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnThreeAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnThreeAddRecord" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnEqualsAddRecord"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="="
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btnDeleteAddRecord"
      app:layout_constraintTop_toTopOf="@+id/btnDeleteAddRecord" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>