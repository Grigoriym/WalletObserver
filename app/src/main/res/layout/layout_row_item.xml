<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools">

  <ImageView
    android:id="@+id/ivRowItem"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars" />

  <TextView
    android:id="@+id/tvRowItemCategory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/ivRowItem"
    app:layout_constraintTop_toTopOf="@+id/ivRowItem" />

  <TextView
    android:id="@+id/tvRowItemAccount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="TextView"
    app:layout_constraintStart_toStartOf="@+id/tvRowItemCategory"
    app:layout_constraintTop_toBottomOf="@+id/tvRowItemCategory" />

  <TextView
    android:id="@+id/tvRowItemDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:text="TextView"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@+id/tvRowItemAccount"
    app:layout_constraintTop_toBottomOf="@+id/tvRowItemAccount" />

  <TextView
    android:id="@+id/tvRowItemAmount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tvRowItemCategory" />

  <TextView
    android:id="@+id/tvRowItemDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="@+id/tvRowItemAmount"
    app:layout_constraintTop_toTopOf="@+id/tvRowItemAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>