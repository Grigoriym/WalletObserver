<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_navigation"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.example.walletobserver.ui.home.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" >
    <action
      android:id="@+id/nextFragment"
      app:destination="@id/addRecordFragment" />
  </fragment>

  <fragment
    android:id="@+id/recordsFragment"
    android:name="com.example.walletobserver.ui.records.RecordsFragment"
    android:label="Records"
    tools:layout="@layout/fragment_records" >
    <action
      android:id="@+id/nextFragment"
      app:destination="@id/addRecordFragment" />
  </fragment>

  <fragment
    android:id="@+id/debtsFragment"
    android:name="com.example.walletobserver.ui.debts.DebtsFragment"
    android:label="Debts"
    tools:layout="@layout/fragment_debts" />

  <fragment
    android:id="@+id/goalsFragment"
    android:name="com.example.walletobserver.ui.goals.GoalsFragment"
    android:label="Goals"
    tools:layout="@layout/fragment_goals" />

  <fragment
    android:id="@+id/shoppingListsFragment"
    android:name="com.example.walletobserver.ui.shopping_lists.ShoppingListsFragment"
    android:label="Shopping Lists"
    tools:layout="@layout/fragment_shopping_lists" />

  <fragment
    android:id="@+id/addRecordFragment"
    android:name="com.example.walletobserver.ui.add_record.AddRecordFragment"
    android:label="Add Record"
    tools:layout="@layout/fragment_add_record" >
    <action
      android:id="@+id/nextFragment"
      app:destination="@id/chooseCategoryFragment" />
  </fragment>

  <fragment
    android:id="@+id/chooseCategoryFragment"
    android:name="com.example.walletobserver.ui.choose_category.ChooseCategoryFragment"
    android:label="Choose Category"
    tools:layout="@layout/fragment_choose_category" />

</navigation>