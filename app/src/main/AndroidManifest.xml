<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.grappim.walletobserver">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:name="com.grappim.walletobserver.WalletObserverApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="AllowBackup,GoogleAppIndexingWarning">
    <activity
      android:name="com.grappim.walletobserver.ui.initial_settings.InitialSettingsActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name="com.grappim.walletobserver.ui.intro.IntroActivity"
      android:theme="@style/AppTheme" />
    <activity
      android:name="com.grappim.walletobserver.ui.SplashActivity"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="com.grappim.walletobserver.ui.MainActivity" />
  </application>

</manifest>